<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heidan.dao.IUserMapper">

    <resultMap id="usermap" type="Users">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="phoneNum" column="phone_num"/>
        <result property="status" column="status"/>
        <collection property="roles" column="id" javaType="java.util.ArrayList" ofType="Role"
                    select="com.heidan.dao.IRoleMapper.finByRole"/>
    </resultMap>

    <resultMap id="userbyid" type="Users">
        <id property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="phoneNum" column="phone_num"/>
        <result property="status" column="status"/>
        <collection property="roles" column="id" javaType="java.util.ArrayList" ofType="Role"
                    select="com.heidan.dao.IRoleMapper.finByRole"/>
    </resultMap>

    <select id="finByUserName" parameterType="java.lang.String" resultMap="usermap">
        SELECT * FROM users WHERE users.user_name = #{name}
    </select>

    <select id="finAll" resultType="Users">
        select * from users
    </select>

    <insert id="inserUsers" parameterType="com.heidan.entity.Users">
        insert into users (email,user_name,password,phone_num,status)
        values (#{email},#{userName},#{password},#{phoneNum},#{status});
    </insert>

    <select id="finById" parameterType="java.lang.Integer" resultMap="userbyid">
        SELECT * FROM users WHERE id = #{id}
    </select>
</mapper>